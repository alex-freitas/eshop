@using TaskScheduler.Models.SqlCommandJob

@model RegisterViewModel

<div id="SqlCommandJobRegister" class="container-fluid">

    <form class="form-horizontal" role="form">

        <input type="hidden" value="@Model.Id" name="Id" />

        <div class="form-group">
            <label class="control-label col-sm-3">Name:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control input-sm required" name="Name" value="@Model.Name" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">Description:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control input-sm required" name="Description" value="@Model.Description" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">Cron:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control input-sm required" name="Cron" value="@Model.Cron" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">Enabled:</label>
            <div class="col-sm-8">
                <input type="checkbox" name="Enabled" @(Model.Enabled == true ? "checked" : "") />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">Database:</label>
            <div class="col-sm-8">
                <select class="required form-control input-sm" name="DatabaseInfoId">
                    <option></option>
                    @foreach (var item in Model.DatabasesInfo)
                    {
                        <option value="@item.Id" selected="@(item.Id == Model.DatabaseInfoId ? "selected" : "")">@item.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">SQL Command:</label>
            <div class="col-sm-8">
                <textarea class="required form-control input-sm" style="height: 270px" name="Command">@Model.Command</textarea>
            </div>
        </div>
    </form>

    <div class="pull-right">
        <button id="cancel" class="btn btn-danger">Cancel</button>
        <button id="save" class="btn btn-primary">Save</button>
    </div>
</div>

@section scripts {
    <script>views.SqlCommandJob.Register()</script>
}