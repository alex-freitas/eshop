@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div id="JobIndex">
    <button id="addJob" class="btn btn-primary">Add Job</button>
    <button id="toggleFilters" class="btn btn-default">Show Filters</button>

    <div id="jobsToAdd" style="display: none">
        <fieldset>
            <legend>Add Job</legend>
            <button id="addHttpJob" class="btn btn-primary">HTTP</button>
            <button id="addSqlCommandJob" class="btn btn-primary">SQL Command</button>
            <button id="addSqlMailReportJob" class="btn btn-primary">SQL Mail Report</button>
        </fieldset>
    </div>

    <div id="filters" style="display: none">
        <fieldset>
            <legend>Filters</legend>
            <form class="form-horizontal" role="form">

                <div class="form-group">
                    <label class="control-label col-sm-2">Name:</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control input-sm" name="NamePart" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Status:</label>
                    <div class="col-sm-4">
                        <label class="radio-inline"><input type="radio" name="Enabled" value="" checked>All</label>
                        <label class="radio-inline"><input type="radio" name="Enabled" value="true">Enabled</label>
                        <label class="radio-inline"><input type="radio" name="Enabled" value="false">Disabled</label>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Job Type:</label>
                    <div class="col-sm-4">
                        <label class="radio-inline"><input type="radio" name="JobType" value="" checked>All</label>
                        <label class="radio-inline"><input type="radio" name="JobType" value="SqlCommandJob">SQL Command</label>
                        <label class="radio-inline"><input type="radio" name="JobType" value="HttpJob">HTTP</label>
                        <label class="radio-inline"><input type="radio" name="JobType" value="SqlMailReportJob">SQL Mail Report</label>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Rows per page:</label>
                    <div class="col-sm-4">
                        <input type="text" class="required number form-control input-sm" min="1" name="MaxRows" value="10" />
                    </div>
                </div>

                <input type="hidden" name="SortBy" />
                <input type="hidden" name="StartRow" />
            </form>

            <button id="search" class="btn btn-default">Search</button>
        </fieldset>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th class="col-sm-6" data-sort-field="Name">Name</th>
                <th class="col-sm-2" data-sort-field="JobType">Type</th>
                <th class="col-sm-2" data-sort-field="Enabled">Status</th>
                <th class="col-sm-2" data-sort-field="Cron">Cron</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <div class="paginator"></div>
</div>

@section scripts {
    <script>views.Job.Index()</script>
}
